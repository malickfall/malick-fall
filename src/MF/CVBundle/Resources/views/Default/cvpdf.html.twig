{% extends 'MFCVBundle::layoutcv.html.twig' %}

{% block stylesheets %}
<style>
	body {font-family:Arial, Helvetica, sans-serif;font-size:18px;}
	h1 {font-size:40px;}
	h2 {font-size:28px;}
	h3 {font-size:22px;font-weight: normal}
	.header-up {background-color:#333;color:#fff;padding:5px 10px 10px;}
	.header-down {background-color:#ddd;padding:4px 10px;}
	.header-down-left {width:33%;float:left;}
	.header-down-middle {width:33%;}
	.header-down-right {width:33%;float:right;}
	.left-column {float:left;width:65%}
	.right-column {float:left;width:30%}
	.space-column {float:left;width:5%}
	.job-row {margin-bottom:10px;background-color:#ddd;padding:10px;}
	.job-row-left {width:35%}
	.job-row-right {width:65%;float:right}
	.comp-row {
        background-color:#ddd;padding:5px;
    }
	.clear {clear:both;}
	.position {
        font-size:18px;
        /*margin-bottom:5px;*/
        color:#428BCA;
    }
	.company {font-weight:bold}
	.header-link {color:#fff;text-decoration:none}
	.link {font-style:italic;color:#111;text-decoration:none}
	.desc {margin: 5px 0;}
	.photo {float:left;height:100%}
	.header-desc {}
	.comp-row ul {margin: 0}
    #footer {background-color:#333;color:#fff;padding:10px;}
</style>
{% endblock %}

{% block body %}
	<div id="header">
		<div class="header-up">
			<!--<div class="photo">photo</div>-->
			<div class="header-desc">
				<h1 style="display: inline">{{ me.prenom }} {{ me.nom }}</h1>
				<h2 style="display: inline">&nbsp;{{ me.position }}</h2>
				<!--<div><a href="{{ me.site }}" class="header-link" target="_blank">{{ me.site }}</a></div>-->
			</div>
		</div>
		<div class="header-down">
            <div>{{ me.age }} (7 ans d'expérience)</div>
            <div>Permis B (+ formation 125)</div>
            <div>{{me.email}} / {{ me.tel }}</div>

			<!--<span class="header-down-left">
                {{ me.age }} (7 ans d'expérience)</span>
			<span class="header-down-middle">&nbsp;</span>
			<span class="header-down-middle">Permis B (+ formation 125)</span>
			<span class="header-down-right">{{me.email}} / {{ me.tel }}</span>-->
		</div>
	</div>
	
	<div id="content">
		<div class="left-column">
			<h3>{{ 'Expériences' }}</h3>
			<hr/>
			<div>
				{% for job in experiences %}
					<div class="job-row">
						<div class="position">{{ job.position }}</div>
						<div>
							<span class="job-row-left company">{{ job.company }}</span>
							<span class="job-row-right">{{ job.location }}</span>
						</div>
						<div>
							<span class="job-row-left">&nbsp;</span>
							<span class="job-row-right desc">{{ job.description }}</span>
						</div>
						<div class="clear" target="_blank"><a class="link" href="{{ job.url }}">{{ job.url }}</a></div>
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="space-column">&nbsp;</div>
		<div class="right-column">
			<h3>{{ 'Compétences' }}</h3>
			<hr/>
			<div>
				{% for competence in competences if competence.category.nom == 'Backend' or competence.category.nom == 'Frontend' %}
					<div class="comp-row">
						<div class="position">{{ competence.nom }}</div>
					</div>
				{% endfor %}
			</div>
		</div>
        <div class="margin-bottom: 10px">&nbsp;</div>
        <div style="clear: both">
			<hr/>
            <h3>{{ 'Références' }}</h3>
			<hr/>
            {% for reference in references %}
                <div class="job-row">
                    <div class="col-md-4">
                        <div class="position">{{ reference.nom }}</div>
                        <div>
                            <span class="company">{{ reference.job.company }}</span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <span class="desc">{{ reference.description }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
	</div>
{% endblock %}
